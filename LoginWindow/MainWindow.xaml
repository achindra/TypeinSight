<Window x:Class="LoginWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="18" Margin="33,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="33,57,0,0" VerticalAlignment="Top" Width="166" KeyDown="txtPassword_KeyDown" KeyUp="txtPassword_KeyUp"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="124,89,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="33,89,0,0" VerticalAlignment="Top" Width="75" Click="btnClear_Click"/>
        <TextBlock x:Name="txtBlock" HorizontalAlignment="Left" Height="180" Margin="33,129,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="474"/>

    </Grid>
</Window>
